<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@drawable/fundo_janela_contatos_branco"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="5dp"
    android:visibility="visible"
    tools:visibility="visible">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewFotoDenunciante"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/padrao" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textNomeUsuario"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Nome Usuario"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textIdDenunciaLista2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cinzaEscuro"
                android:fontFamily="sans-serif-medium"
                android:text="TextView" />

        </LinearLayout>

        <TextView
            android:id="@+id/textMatricula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Matricula"
            android:textColor="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textTipoAgressao2"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Tipo Agressão"
                android:fontFamily="sans-serif-medium"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textDataOcorrido2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data Ocorrido"
                android:fontFamily="sans-serif-medium"
                android:textColor="#000"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textDescricao2"
            android:layout_width="330dp"
            android:layout_height="20dp"
            android:text="Descrição"
            android:fontFamily="sans-serif-medium"
            android:textColor="#000"/>

    </LinearLayout>

</LinearLayout>